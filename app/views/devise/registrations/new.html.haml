.container
  .row.justify-content-center
    .col-6
      %h4 Sign up
      = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = f.error_notification
        .form-inputs
          = f.input :name, required: true, autofocus: true, label: 'User name:'
          = f.input :email, required: true, autofocus: true, label: 'Email:'
          = f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), label: 'Password:'
          = f.input :password_confirmation, required: true, label: 'Password confirmation:'
        .form-actions
          = f.button :submit, "Sign up"

      = render "devise/shared/links"
